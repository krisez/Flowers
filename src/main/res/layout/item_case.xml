<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="4dp">

    <!-- 案例 item -->

    <TextView
        android:id="@+id/case_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="4dp"
        android:textColor="#3F3F3F"
        android:textSize="20sp"
        tools:text="标题" />

    <TextView
        android:id="@+id/case_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:textSize="18sp"
        tools:text="内容" />

    <TextView
        android:id="@+id/case_dis_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_content"
        android:layout_margin="4dp"
        tools:text="评论10" />

    <TextView
        android:id="@+id/case_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_content"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/case_dis_count"
        android:layout_toRightOf="@id/case_dis_count"
        tools:text="07/23 15:35" />

    <TextView
        android:id="@+id/case_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/case_content"
        android:layout_margin="4dp"
        tools:text="分类" />

</RelativeLayout>